{
  "manifest_version": 3,
  "name": "GitHub加速器",
  "version": "1.1.1",
  "description": "自动重定向GitHub请求及相关资源到镜像站点，显著提升访问速度。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.github.com/*",          // 包含了 github.com, api.github.com, git-lfs.github.com, securitylab.github.com 等
    "*://github.io/*",
    "*://*.githubusercontent.com/*", // 包含了 avatars.githubusercontent.com, raw.githubusercontent.com, gist.githubusercontent.com, githubusercontent.com 等
    "*://github.githubassets.com/*",
    "*://collector.github.com/*",
    "*://assets-cdn.github.com/*",
    "*://cdn.jsdelivr.net/*",      // 常用 CDN，有时也加速 GitHub Pages 中的资源
    "*://www.githubstatus.com/*",
    "*://npmjs.com/*",             // 与 GitHub 生态相关的 npmjs.com
    "*://github.global.ssl.fastly.net/*", // GitHub 的 CDN
    "*://api.npms.io/*",           // 与 npmjs 相关的 API
    "*://github.community/*"       // GitHub 社区论坛
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16_disabled.png",
      "48": "icons/icon48_disabled.png",
      "128": "icons/icon128_disabled.png"
    }
  }
}
